<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/student_view_layout"
    android:background="?attr/selectableItemBackground"
    android:layout_height="90dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_margin="12dp"
        android:src="@drawable/fb"
        android:id="@+id/studentImage_rec"
        android:layout_width="70dp"
        android:layout_height="70dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/studentImage_rec"
        android:layout_toEndOf="@+id/studentImage_rec"
        android:layout_toRightOf="@+id/studentImage_rec"
        android:text="Muhammad Salman Zafar"
        android:textColor="#333"
        android:textSize="18sp"
        android:layout_marginTop="4dp"
        tools:ignore="HardcodedText"
        android:id="@+id/student_name_rec"/>

    <TextView
        android:id="@+id/student_id_rec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/student_name_rec"
        android:layout_toEndOf="@+id/studentImage_rec"
        android:layout_toRightOf="@+id/studentImage_rec"
        android:layout_marginTop="2dp"
        android:text="24058"
        android:textColor="#333"
        android:textSize="18sp"
        tools:ignore="HardcodedText"/>

    <TextView
        android:id="@+id/attedence_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="31dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:text="P"
        android:visibility="invisible"
        android:textColor="#333"
        android:textStyle="bold"
        android:textSize="15sp"
        tools:ignore="HardcodedText"
        android:layout_alignParentRight="true"/>

</RelativeLayout>