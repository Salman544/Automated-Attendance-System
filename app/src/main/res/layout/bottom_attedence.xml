<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/permission_bottom_sheet">

    <View
        android:background="?attr/selectableItemBackgroundBorderless"
        android:id="@+id/present_permission"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/textView8"
        android:layout_toStartOf="@+id/textView8"/>

    <View
        android:id="@+id/absent_permission"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="120dp"
        android:layout_toEndOf="@+id/present_permission"
        android:layout_toRightOf="@+id/present_permission"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_marginEnd="120dp"/>

    <View
        android:background="?attr/selectableItemBackgroundBorderless"
        android:id="@+id/leave_permission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="60dp"
        android:layout_marginStart="60dp"
        android:layout_toEndOf="@+id/textView8"
        android:layout_toRightOf="@+id/textView8"/>


    <ImageView
        android:id="@+id/copy_image"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:srcCompat="@drawable/ic_person_black"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="25dp"
        tools:ignore="ContentDescription"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Present"
        android:textSize="15sp"
        android:layout_below="@+id/copy_image"
        android:layout_alignLeft="@+id/copy_image"
        android:layout_alignStart="@+id/copy_image"
        android:layout_marginTop="9dp"
        android:id="@+id/textView7"
        tools:ignore="HardcodedText"/>

    <ImageView
        android:id="@+id/share_image"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_above="@+id/textView7"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        app:srcCompat="@drawable/ic_delete_black"
        tools:ignore="ContentDescription"/>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignBaseline="@+id/textView7"
        android:layout_alignBottom="@+id/textView7"
        android:layout_marginLeft="65dp"
        android:layout_marginStart="65dp"
        android:text="Absent"
        android:textSize="15sp"
        tools:ignore="HardcodedText"/>

    <ImageView
        android:id="@+id/delete_image"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="32dp"
        android:layout_marginEnd="32dp"
        app:srcCompat="@drawable/ic_error_black"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        tools:ignore="ContentDescription"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Leave"
        android:textSize="15sp"
        android:layout_alignBaseline="@+id/textView8"
        android:layout_alignBottom="@+id/textView8"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="22dp"
        android:layout_marginEnd="22dp"
        tools:ignore="HardcodedText"
        android:id="@+id/textView9"/>


</RelativeLayout>