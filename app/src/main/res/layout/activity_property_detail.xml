<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    tools:context="com.salman.myproject.ui.PropertyDetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/property_inf_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/tranparent_image"
            android:adjustViewBounds="true"
            android:scaleType="fitStart"
            tools:ignore="ContentDescription"/>

        <ImageView
            android:id="@+id/select_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="68dp"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_camera"
            tools:ignore="ContentDescription"/>


        <TextView
            android:id="@+id/deal_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/property_inf_image"
            android:layout_marginTop="10dp"
            android:text="Deal Type : "
            android:textSize="18sp"
            tools:ignore="HardcodedText"/>

        <TextView
            android:id="@+id/property_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/deal_type"
            android:layout_marginTop="10dp"
            android:text="Property Type : "
            android:textSize="18sp"
            tools:ignore="HardcodedText"/>

        <TextView
            android:id="@+id/property_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/property_type"
            android:layout_marginTop="10dp"
            android:text="Property Price : "
            android:textSize="18sp"
            tools:ignore="HardcodedText"/>

        <TextView
            android:id="@+id/property_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/property_price"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Property Detail"
            android:textSize="18sp"
            tools:ignore="HardcodedText"/>

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/details_1"
            android:layout_marginTop="10dp"
            android:text="Email : "
            android:textSize="18sp"
            tools:ignore="HardcodedText"/>

        <TextView
            android:id="@+id/contact_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email"
            android:layout_marginTop="10dp"
            android:text="Contact Number : "
            android:textSize="18sp"
            tools:ignore="HardcodedText"/>

        <TextView
            android:id="@+id/deal_type_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/deal_type"
            android:layout_alignBottom="@+id/deal_type"
            android:layout_marginLeft="22dp"
            android:layout_marginStart="22dp"
            android:layout_toEndOf="@+id/deal_type"
            android:layout_toRightOf="@+id/deal_type"
            android:textColor="#333"
            android:textSize="18sp"
            tools:ignore="HardcodedText"/>

        <TextView
            android:id="@+id/property_detail_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/property_price"
            android:layout_toEndOf="@+id/property_price"
            android:layout_toRightOf="@+id/property_price"
            android:textColor="#333"
            android:textSize="18sp"
            tools:ignore="HardcodedText"/>


        <TextView
            android:id="@+id/price1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/property_price"
            android:layout_alignBottom="@+id/property_price"
            android:layout_toEndOf="@+id/property_price"
            android:layout_toRightOf="@+id/property_price"
            android:textSize="18sp"
            tools:ignore="HardcodedText"/>

        <TextView
            android:id="@+id/details_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/property_detail"
            android:padding="5dp"
            android:textColor="#333"
            android:textSize="18sp"
            tools:ignore="HardcodedText"/>


        <TextView
            android:id="@+id/email1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/email"
            android:layout_alignBottom="@+id/email"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/email"
            android:layout_toRightOf="@+id/email"
            android:textColor="#333"
            android:textSize="18sp"
            tools:ignore="HardcodedText"/>

        <TextView
            android:id="@+id/contact_number1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/contact_number"
            android:layout_alignBottom="@+id/contact_number"
            android:layout_toEndOf="@+id/contact_number"
            android:layout_toRightOf="@+id/contact_number"
            android:textColor="#333"
            android:textSize="18sp"
            tools:ignore="HardcodedText"/>


        <TextView
            android:id="@+id/location_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/contact_number"
            android:layout_marginTop="10dp"
            android:text="Location : "
            android:textSize="18sp"
            tools:ignore="HardcodedText"/>

        <TextView
            android:id="@+id/location_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/deal_type"
            android:layout_toRightOf="@+id/deal_type"
            android:textColor="#333"
            android:textSize="18sp"
            tools:ignore="HardcodedText"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/name_text_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/property_inf_image"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="65dp"
            android:layout_marginStart="65dp"
            android:layout_marginTop="15dp">

            <EditText
                android:id="@+id/edit_deal_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Deal Type"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:maxLines="1"
                android:visibility="gone"
                android:textSize="16sp"
                tools:ignore="HardcodedText"/>

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/register_email_text_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_text_input"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="65dp"
            android:layout_marginStart="65dp"
            android:layout_marginTop="25dp">

            <EditText
                android:id="@+id/edit_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:visibility="gone"
                android:textSize="16sp"
                tools:ignore="HardcodedText"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/select_type_text_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/register_email_text_input_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="65dp"
            android:layout_marginStart="65dp"
            android:layout_marginTop="25dp"
            tools:ignore="HardcodedText">


            <EditText
                android:id="@+id/edit_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Add Details"
                android:visibility="gone"
                android:imeOptions="actionNext"
                android:inputType="textMultiLine"
                android:maxLines="1"
                android:textSize="16sp"
                tools:ignore="HardcodedText"/>

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/register_password_text_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/select_type_text_input_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="65dp"
            android:layout_marginStart="65dp"
            android:layout_marginTop="25dp"
            tools:ignore="HardcodedText">

            <EditText
                android:id="@+id/edit_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Price"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLines="1"
                android:visibility="gone"
                android:textSize="16sp"
                tools:ignore="HardcodedText"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/register_confirm_password_text_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/register_password_text_input_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="65dp"
            android:layout_marginStart="65dp"
            android:layout_marginTop="25dp"
            tools:ignore="HardcodedText">

            <EditText
                android:id="@+id/edit_property_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Property Type"
                android:imeOptions="actionNext"
                android:visibility="gone"
                android:inputType="textMultiLine"
                android:textSize="16sp"
                tools:ignore="HardcodedText"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/edit_location_text_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/register_confirm_password_text_input_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="65dp"
            android:layout_marginStart="65dp"
            android:layout_marginTop="25dp"
            tools:ignore="HardcodedText">

            <EditText
                android:id="@+id/edit_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:hint="Location"
                android:imeOptions="actionNext"
                android:inputType="textMultiLine"
                android:textSize="16sp"
                tools:ignore="HardcodedText"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/edit_contact_number_text_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_location_text_input_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="65dp"
            android:layout_marginStart="65dp"
            android:layout_marginTop="25dp"
            tools:ignore="HardcodedText">

            <EditText
                android:id="@+id/edit_contact_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Contact Number"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:visibility="gone"
                android:textSize="16sp"
                tools:ignore="HardcodedText"/>

        </android.support.design.widget.TextInputLayout>


        <android.support.v7.widget.AppCompatButton
            android:id="@+id/add_fab_prop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_contact_number_text_input_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="65dp"
            android:layout_marginStart="65dp"
            android:visibility="gone"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/audiowide"
            android:padding="20dp"
            android:text="Add"
            android:textColor="@color/buttonTextColor"
            tools:ignore="HardcodedText"
            tools:targetApi="lollipop"/>

    </RelativeLayout>


</ScrollView>
