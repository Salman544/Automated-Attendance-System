<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    tools:context="com.salman.myproject.ui.StudentFragment">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/viewStudentRecycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/addStudentFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="35dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:elevation="10dp"
        app:fabSize="normal"
        app:rippleColor="@color/rippleColor"
        app:srcCompat="@drawable/ic_person"
        tools:targetApi="lollipop"/>

    <TextView
        android:id="@+id/add_student_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/addStudentFab"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="100dp"
        android:layout_marginEnd="45dp"
        android:layout_marginRight="45dp"
        android:background="#333"
        android:elevation="10dp"
        android:padding="1dp"
        android:enabled="false"
        android:text="Add Student"
        android:textColor="#BFBFBF"
        android:textSize="15sp"
        android:visibility="invisible"
        tools:ignore="HardcodedText"
        tools:targetApi="lollipop"/>

    <TextView
        android:id="@+id/take_attendance_frag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/add_student_text"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="140dp"
        android:layout_marginEnd="45dp"
        android:layout_marginRight="45dp"
        android:background="#333"
        android:elevation="10dp"
        android:padding="2dp"
        android:text="Take Attendance"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:visibility="invisible"
        tools:ignore="HardcodedText"
        tools:targetApi="lollipop"/>

    <TextView
        android:id="@+id/attendance_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/take_attendance_frag"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="180dp"
        android:layout_marginEnd="45dp"
        android:layout_marginRight="45dp"
        android:background="#333"
        android:elevation="10dp"
        android:padding="3dp"
        android:text="Attendance Summary"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:visibility="invisible"
        tools:ignore="HardcodedText"
        tools:targetApi="lollipop"/>

    <TextView
        android:id="@+id/view_date_frag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/attendance_summary"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="220dp"
        android:layout_marginEnd="45dp"
        android:layout_marginRight="45dp"
        android:background="#333"
        android:elevation="10dp"
        android:padding="3dp"
        android:text="Date: 2-1-2018"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:visibility="invisible"
        tools:ignore="HardcodedText"
        tools:targetApi="lollipop"/>

    <TextView
        android:id="@+id/enrollment_key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/attendance_summary"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="260dp"
        android:layout_marginEnd="45dp"
        android:layout_marginRight="45dp"
        android:background="#333"
        android:elevation="10dp"
        android:padding="3dp"
        android:text="Get Enrollment key"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:visibility="invisible"
        tools:ignore="HardcodedText"
        tools:targetApi="lollipop"/>

    <TextView
        android:id="@+id/student_request"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/attendance_summary"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="300dp"
        android:layout_marginEnd="45dp"
        android:layout_marginRight="45dp"
        android:background="#333"
        android:elevation="10dp"
        android:padding="3dp"
        android:text="Students Requests"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:visibility="invisible"
        tools:ignore="HardcodedText"
        tools:targetApi="lollipop"/>

    <TextView
        android:id="@+id/view_property"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/attendance_summary"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="340dp"
        android:layout_marginEnd="45dp"
        android:layout_marginRight="45dp"
        android:background="#333"
        android:elevation="10dp"
        android:padding="3dp"
        android:text="View Property"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:visibility="invisible"
        tools:ignore="HardcodedText"
        tools:targetApi="lollipop"/>

</android.support.design.widget.CoordinatorLayout>
